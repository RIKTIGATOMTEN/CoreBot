#-------------------
# Core Configuration
#-------------------
# Debug mode:
# Makes the bot output debug logs alongside the 
# normal logs which can be useful for fixing issues
DEBUG=false # Type boolean "true/false"

# Addons:
# Makes the bot load external addons
# Required for the bot to load addons and commands
# Recommended to set this value to "true"
ADDONS=false # Type boolean "true/false"

#-------------------
# Discord Configuration
#-------------------

# Bot Token:
# Required for the script to connect as your bot
# to the discord api
# Get this from: https://discord.com/developers/applications
# This is required for the bot to work!
TOKEN=YOUR_TOKEN_HERE

# Client Id:
# Required for the bot if you want to use client commands
# Found in the Discord Developer Portal under "Application ID"
# This is required for the bot to work!
CLIENT_ID=YOUR_VALUE_HERE

# Command Registration Settings:
# Choose between global or guild commands
REGISTRATION_SCOPE=guild # Options: "global" or "guild"

# Clear existing commands on startup 
# This is so you don't end up with duplicate commands or stale commands
# Recommended to set this value to "false" unless you are actively developing commands
# Set to true then restart the bot and it will clear and re-register all commands
# It takes longer to start the bot with this enabled
CLEAR_COMMANDS=false # Type boolean "true/false"

# Guild Id:
# Required if you are using guild instead of global commands.
# Right-click your server in Discord and select "Copy Server ID"
# (Developer Mode must be enabled in Discord settings)
GUILD_ID=YOUR_VALUE_HERE

#-------------------
# Locale Settings
#-------------------

# LOCALE uses standard BCP 47 language tags
# Examples:
#   en-US  → English (United States)
#   en-GB  → English (United Kingdom)
#   sv-SE  → Swedish (Sweden)
LOCALE=en-US

# TIMEZONE must be a valid IANA timezone name
# Examples:
#   Europe/Stockholm, Europe/Berlin
#   America/New_York, Asia/Tokyo
# Format: Region/City
TIMEZONE=America/New_York

# TIME_FORMAT must be either 12h or 24h
TIME_FORMAT=12h